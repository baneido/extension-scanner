{
  "manifest_version": 3,
  "name": "MalExtension - Extension Threat Detector",
  "version": "0.1.0",
  "description": "Detects potentially malicious Chrome extensions installed in your browser",
  "permissions": ["management", "storage", "alarms", "notifications"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
